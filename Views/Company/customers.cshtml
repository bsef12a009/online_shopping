@model List<HomeShop.Models.Customer>

@{

    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers</title>
</head>
<body>

    <div class="col-lg-12 ">
        <br><br />
        <h1 style="margin-left: 40px">CUSTOMER DATA</h1>

        <div class="col-lg-12 text-center " style="margin-left: 10px; margin-top: 50px; margin-bottom: 200px; ">
            <table>
                <tr style="background-color:grey">
                    <td style="width:150px; height:50px">
                        <strong>ID</strong>
                    </td>
                    <td style="width:150px; height:50px">
                        <strong>LOGIN ID</strong>
                    </td>
                    <td style="width:150px; height:50px">
                        <strong>NAME</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>PHONE</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>ADDRESS</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>EMAIL</strong>
                    </td>
                </tr>
                @if (Model.Count != 0)
                {
                    foreach (var x in Model)
                    {
                    <tr style="background-color:antiquewhite">
                    <td style="width:150px; height:50px">
                        @x.Id
                    </td>
                    <td style="width:150px; height:50px">
                        @x.login_id
                    </td>
                    <td style="width:150px; height:50px">
                        @x.name
                    </td>
                    <td style="width:200px; height:50px">
                        @x.phone

                    </td>
                    <td style="width:150px; height:50px">
                        @x.address

                    </td>
                    <td style="width:150px; height:50px">
                        @x.email
                    </td>
                </tr>
                    } 
                }

            </table>

        </div>

    </div>
</body>
</html>


