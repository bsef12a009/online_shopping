@model List<HomeShop.Models.order>

@{

    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers</title>
</head>
<body>

    <div class="col-lg-12 ">
        <br><br />
        <h1 style="margin-left: 40px">Orders</h1>

        <div class="col-lg-12 text-center " style="margin-left: 10px; margin-top: 50px; margin-bottom: 200px; ">
            <table>
                <tr style="background-color:grey">
                    <td style="width:150px; height:50px">
                        <strong>ID</strong>
                    </td>
                    <td style="width:150px; height:50px">
                        <strong>Customer ID</strong>
                    </td>
                    <td style="width:150px; height:50px">
                        <strong>Item Id</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>QUANTITY</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>PRICE</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>TOTAL</strong>
                    </td>
                    <td style="width:200px; height:50px">
                        <strong>STATUS</strong>
                    </td>
                </tr>
                @if (Model.Count != 0)
                {
                    foreach (var x in Model)
                    {
                        <tr style="background-color:antiquewhite">
                            <td style="width:150px; height:50px">
                                @x.Id
                            </td>
                            <td style="width:150px; height:50px">
                                @x.c_id
                            </td>
                            <td style="width:150px; height:50px">
                                @x.item_id
                            </td>
                            <td style="width:200px; height:50px">
                                @x.quantity

                            </td>
                            <td style="width:150px; height:50px">
                                @x.price

                            </td>
                            <td style="width:150px; height:50px">
                                @x.total
                            </td>
                            <td style="width:150px; height:50px">
                                @x.status
                            </td>
                        </tr>
                    }
                }

            </table>

        </div>

    </div>
</body>
</html>


