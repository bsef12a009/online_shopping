
@model HomeShop.Models.Admin

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>settings</title>
    <script src="~/Scripts/jquery.js"></script>
    <script>
        $(document).ready(function () {
            $("#up_nme").hide();
            $("#up_u_name").hide();
            $("#up_pass").hide();
            $("#up_email").hide();
            $("#up_phn").hide();
            $("#nme").on("click", function ()
            {
                $("#u_name").show();
                $("#pass").show();
                $("#email").show();
                $("#phn").show();
                
                $("#up_u_name").hide();
                $("#up_pass").hide();
                $("#up_email").hide();
                $("#up_phn").hide();
                $("#nme").hide();
                $("#up_nme").show();
                $("#can_nme").on("click", function () {
                    $("#nme").show();
                    $("#up_nme").hide();
                });
            });
            $("#u_name").on("click", function () {
                $("#nme").show();
                $("#pass").show();
                $("#email").show();
                $("#phn").show();

                $("#up_nme").hide();
                $("#up_pass").hide();
                $("#up_email").hide();
                $("#up_phn").hide();
                $("#u_name").hide();
                $("#up_u_name").show();
                $("#can_u_name").on("click", function () {
                    $("#u_name").show();
                    $("#up_u_name").hide();
                });
            });
            $("#pass").on("click", function () {
                $("#nme").show();
                $("#u_name").show();
                $("#email").show();
                $("#phn").show();

                $("#up_nme").hide();
                $("#up_u_name").hide();
                $("#up_email").hide();
                $("#up_phn").hide();
                $("#pass").hide();
                $("#up_pass").show();
                $("#can_pass").on("click", function () {
                    $("#pass").show();
                    $("#up_pass").hide();
                });
            });
            $("#email").on("click", function () {
                $("#nme").show();
                $("#u_name").show();
                $("#pass").show();
                $("#phn").show();
                $("#up_nme").hide();
                $("#up_u_name").hide();
                $("#up_pass").hide();
                $("#up_phn").hide();
                $("#email").hide();
                $("#up_email").show();
                $("#can_email").on("click", function () {
                    $("#email").show();
                    $("#up_email").hide();
                });
            });
            $("#phn").on("click", function () {
                $("#nme").show();
                $("#u_name").show();
                $("#pass").show();
                $("#email").show();

                $("#up_nme").hide();
                $("#up_u_name").hide();
                $("#up_pass").hide();
                $("#up_email").hide();
                $("#phn").hide();
                $("#up_phn").show();
                $("#can_phn").on("click", function () {
                    $("#phn").show();
                    $("#up_phn").hide();
                });
            });
        });
    </script>
</head>
<body>
    <div class="col-lg-12">
        <ul style="list-style-type: none; margin-right: 150px">
            <li style="margin-top: 50px">
                <h2>
                    GENERAL ACCOUNT SETTINGS
                </h2>
            </li>
            <li  style="margin-top: 50px; border-top: thin solid black; border-bottom: thin solid #E0E0E0">
                <div id="nme" style="height:30px">
                    <strong>NAME</strong><label style="margin-left: 100px; color: blue">@Model.name</label>
                    <label id="edit_nme" style="float: right; color: #909090">Edit</label>
                </div>
                <div id="up_nme" style="background-color: #C0C0C0; height: 70px">
                    <form action="/Admin/updateName" method="post" >
                        <strong>NAME</strong><input type="text" name="name" style="margin-left:100px" />
                        <label id="can_nme" style="float:right;margin-right:20px">X</label>
                        <br>
                        <input type="submit" id="chn_nme" value="change" style="margin-left:350px" />
                    </form>
                    
                </div>
            </li>
            <li  style="border-bottom: thin solid #E0E0E0">
                <div id="u_name" style="height:30px">
                    <strong>USERNAME</strong><label style="margin-left: 100px; color: blue">@Model.Login.username</label>
                    <label id="edit_u_name" style="float: right; color: #909090">Edit</label>
                </div>
                <div id="up_u_name" style="background-color: #C0C0C0; height: 70px">
                    <form action="/Admin/updateU_name" method="post">
                        <strong>USERNAME</strong><input type="text" name="username" style="margin-left:100px" />
                        <label id="can_u_name" style="float:right;margin-right:20px">X</label>
                        <br>
                        <input type="submit" id="chn_u_name" value="change" style="margin-left:400px" />
                    </form>
             
                 </div>
            </li>
            <li  style=" border-bottom: thin solid #E0E0E0">
                <div id="pass" style="height:30px">
                    <strong>PASSWORD</strong><label style="margin-left: 100px; color: blue">@Model.Login.password</label>
                    <label id="edit_pass" style="float: right; color: #909090">Edit</label>
                </div>
                <div id="up_pass" style="background-color: #C0C0C0; height: 70px">
                    <form action="/Admin/updatePass" method="post">
                        <strong>PASSWORD</strong><input type="text" name="password" style="margin-left:100px" />
                        <label id="can_pass" style="float:right;margin-right:20px">X</label>
                        <br>
                        <input type="submit" id="chn_pass" value="change" style="margin-left:400px" />
                    </form>


                </div>
            </li>
            <li style=" border-bottom: thin solid #E0E0E0; ">
                <div id="email" style="height:30px">
                    <strong>EMAIL</strong><label style="margin-left:100px; color:blue">@Model.email</label>
                    <label id="edit_email" style="float: right; color: #909090">Edit</label>
                </div>
                <div id="up_email" style="background-color: #C0C0C0; height: 70px">
                    <form action="/Admin/updateEmail" method="post">
                        <strong>EMAIL</strong><input type="text" name="email" style="margin-left:100px" />
                        <label id="can_email" style="float:right;margin-right:20px">X</label>
                        <br>
                        <input type="submit" id="chn_email" value="change" style="margin-left:350px" />
                    </form>


                </div>
            </li>
            <li  style="border-bottom: thin solid black">
                <div id="phn" style="height:30px">
                    <strong>PHONE</strong><label style="margin-left: 100px; color: blue">@Model.phone</label>
                    <label id="edit_phn" style="float: right; color: #909090">Edit</label>
                </div>
                <div id="up_phn" style="background-color: #C0C0C0; height: 70px">
                    <form action="/Admin/updatePhn" method="post">
                        <strong>PHONE</strong><input type="text" name="phone" style="margin-left:100px" />
                        <label id="can_phn" style="float:right;margin-right:20px">X</label>
                        <br>
                        <input type="submit" id="chn_phn" value="change" style="margin-left:350px" />
                    </form>


                </div>
            </li>
 

        </ul>
    </div>
</body>
</html>
